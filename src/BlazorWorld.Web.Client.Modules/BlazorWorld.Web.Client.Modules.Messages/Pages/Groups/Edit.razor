@page "/messages/edit/{Id}"
@using Microsoft.AspNetCore.Components.Forms
@inject IStringLocalizer<Resource> Localize

<div class="row">
    <div class="col">
        <div class="border border-light p-5 mt-4">
            <p class="h4">@Localize["Message Groups"]</p>

            <EditForm class="mt-4" OnValidSubmit="SubmitAsync" Model="@Group">
                <DataAnnotationsValidator />
                <ValidationSummary />

                @{
                    if (!string.IsNullOrEmpty(ValidationMessage))
                    {
                        <div class="alert alert-danger alert-dismissible row" role="alert">
                            @Localize[ValidationMessage]
                        </div>
                    }
                }

                <div class="form-group row">
                    <InputText class="form-control"
                               @bind-Value="@Group.Name"
                               placeholder="@Localize["Name"]" />
                    <ValidationMessage For="@(() => Group.Name)" />
                </div>
                <div class="form-group row">
                    <NavLink href=""
                             class="btn btn-danger mr-2">
                        <i class="fa fa-times" aria-hidden="true"></i> @Localize["Cancel"]
                    </NavLink>
                    <button type="submit" ref="createButton" id="btnSave" class="btn btn-primary mr-2" value="save">
                        @Localize["Update"]
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

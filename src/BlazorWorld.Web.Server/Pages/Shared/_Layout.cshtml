@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{var siteName = Configuration["SiteName"];}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] | @siteName</title>
    <base href="/" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <link href="manifest.json" rel="manifest" />
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png" />

    <!-- Metadata -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="BlazorWorld | Serving the Blazor Development Community" />
    <meta property="og:description" content="BlazorWorld is a community website and CMS, built to serve the Blazor development community." />
    <meta property="og:image" content="https://blazorworld.com/images/main.jpg" />
    <meta name="description" content="BlazorWorld is a community website and CMS, built to serve the Blazor development community.">
    <meta name="keywords" content="blazor, c#, aspnet, aspnetcore, asp.net, asp.net core, dotnet, programming, developers, microsoft" />
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="BlazorWorld | Serving the Blazor Development Community">
    <meta name="twitter:description" content="BlazorWorld is a community website and CMS, built to serve the Blazor development community.">
    <meta name="twitter:site" content="@@BlazorWorld">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
</head>

<body id="page-top">
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
        <!-- Topbar Navbar -->
        <ul class="container navbar-nav mr-auto">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-fire"></i>
                @siteName
            </a>
        </ul>
        <ul class="navbar-nav ml-auto">
            <div class="topbar-divider d-none d-sm-block"></div>
            <partial name="_LoginPartial" />
        </ul>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />
    <br />
    <br />

    <footer class="border-top footer text-muted">
        <div class="container mt-3 mb-3">
            &copy; @siteName - <a class="mr-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <a href="https://facebook.com/blazorworld" target="_blank"><i class="fab fa-facebook fa-lg mr-2"></i></a>
            <!-- a href="https://instagram.com/blazorworld" target="_blank"><i class="fab fa-instagram fa-lg mr-2"></i></a -->
            <a href="https://twitter.com/blazorworld" target="_blank"><i class="fab fa-twitter fa-lg mr-2"></i></a>
            <a href="https://reddit.com/r/blazorworld" target="_blank"><i class="fab fa-reddit fa-lg mr-2"></i></a>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/js/bootstrap.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.0.7/js/sb-admin-2.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.13/js/all.js"></script>
    <div id="fb-root"></div>
    <script async defer src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-168032701-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-168032701-1');
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
